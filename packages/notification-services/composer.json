{
    "name": "celestine/notification-services",
    "description": "Notification Service for order status changes",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Celestine\\NotificationServices\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Celestine\\NotificationServices\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Celestine Stephen",
            "email": "decele2011@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "extra": {
        "laravel": {
            "providers": [
                "Celestine\\NotificationServices\\NotificationServiceProvider"
            ]
        }
    },
    "require": {
        "php": "^8.2",
        "illuminate/support": "^8.0|^9.0|^10.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.1",
        "phpunit/phpunit": "^10.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    }
}
